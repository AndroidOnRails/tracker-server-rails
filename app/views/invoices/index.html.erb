<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Remaining</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.total %></td>
        <td><%= invoice.remaining %></td>
        <td><%= link_to 'Show', client_invoice_path(@client, invoice) %></td>
        <td><%= link_to 'Edit', edit_client_invoice_path(@client, invoice) %></td>
        <td><%= link_to 'Destroy', client_invoice_path(@client, invoice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

