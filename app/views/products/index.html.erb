<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.label %></td>
        <td><%= product.desc %></td>
        <td><%= product.price %></td>
        <td><%= product.count %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="material-icons">add</i>New Product'.html_safe,
            new_product_path, class: 'btn-floating btn-large waves-effect waves-light red right' %>
